 UPDATE TCURSO SET
 PRE_REQ=1
 WHERE COD_CURSO =2;


 UPDATE TCURSO SET
 PRE_REQ=3
 WHERE COD_CURSO =4;

 SELECT * FROM tcurso WHERE pre_req IS NULL; --- pre- requisito nulo

  SELECT * FROM tcurso WHERE pre_req IS NOT NULL;  --- pre- requisito não nulo


  -- precedencia de opearadores
  ---()
  --- and
  --- or

  SELECT * FROM TCURSO
  WHERE VALOR > 750
  OR VALOR <1000
  AND CARGA_HORARIA = 25;


  SELECT * FROM TCURSO
  WHERE (VALOR > 750
  OR VALOR <1000  )
  AND CARGA_HORARIA = 25;

SELECT cod_aluno,nascimento,Trunc(nascimento), nome
FROM taluno
WHERE Trunc(nascimento) <> '29/08/2002'
ORDER BY cod_aluno asc;

SELECT cod_aluno ,Trunc(nascimento) AS NASCIMENTO, NOME
FROM taluno
WHERE Trunc(nascimento) = '29/08/2002'
ORDER BY cod_aluno asc;

SELECT ESTADO,Avg(POPULACAO) AS POPULACAO_TOTAL FROM SENSO
WHERE ANO ='2014'
GROUP BY ESTADO
ORDER BY 2 DESC;
