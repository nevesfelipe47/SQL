UPDATE taluno SET

ESTADO ='SP',
SALARIO = 900,
NOME ='PEDRO'
WHERE COD_ALUNO = 25;

SELECT ESTADO, SALARIO, NOME FROM TALUNO
ORDER BY ESTADO, SALARIO DESC;

