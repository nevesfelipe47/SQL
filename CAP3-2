-- ALUNOS DESSA TABELA TALUNO E FAZENDO DECRESCER 3000 DIAS PARTINDO DA DATA ATUAL---

ALTER TABLE TALUNO ADD NASCIMENTO DATE DEFAULT SYSDATE -3000;
