

UPDATE TALUNO SET
ESTADO = 'AC',
SALARIO = 250
WHERE COD_ALUNO = 1;

UPDATE TALUNO SET
ESTADO ='SP',
SALARIO = 460
WHERE COD_ALUNO =4;

SELECT * FROM TALUNO
WHERE ESTADO= 'PE'
AND SALARIO <=2000
ORDER BY cod_aluno  ASC ;


